      <div class="new-goal-form">
        <h2>Add a New Goal</h2>
        <br>
    <form method="post" action="/add">
        <label for="title"><strong>Title:</strong>&nbsp;&nbsp;&nbsp;&nbsp;</label>
         <input type="text" id="title" name="title" required>
         <label for="start_date">Start Date:</label>
         <input type="date" id="start_date" name="start_date" required>
         <label for="end_date">End Date:</label>
         <input type="date" id="end_date" name="end_date" required>
         <br>
         <br>
         <label for="description">Description:</label>
         <br>
         <textarea id="description" name="description" rows="4" cols="50" required></textarea>
         <br>
         <br>
         <!-- <input type="submit" value="Add Goal" class="submit-button"> -->
         <button type="submit"> Submit</button>
    </form>
    </div>

    
    <div class="goals-conatainer">
        <h2> My Goals</h2>
        <% if (goals.length > 0) { %>
            <% goals.forEach(goal => { %>
    
                <div class="goal">
                    <h3><%= goal.title %></h3>
                    <p>Description: <%= goal.description %></p>
                    <p>Start Date: <%= goal.start_date %></p>
                    <p>Target Date: <%= goal.end_date %></p>
    
                <div class="progress">
                    <div class="progress-bar" style="width: <%= goal.progress %>%;"></div>
                </div>
            <p><%= goal.progress %>% completed</p>
    
    <form method="post" action="/progress/<%= goal.id %>">
        <label for="progress">Update Progress:</label>
            <input type="number" id="progress" name="progress" min="0" max="100" required>
            <button type="submit">Update</button>
    </form>
    
        <a href="/edit/<%= goal.id %>">Edit</a> -
        <a href="/delete/<%= goal.id %>">Delete</a>
    </div>
            <% }) %>
            <% } else { %>
                <p>No goals found. Add a new goal to get started!</p>
            <% } %>
    </div>
    
